# ============================================
# KWOTE BACKEND - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# SERVER CONFIGURATION
# ============================================

# Port for backend server
PORT=5000

# Node environment (development, production, test)
NODE_ENV=development

# ============================================
# OPTIONAL: DATABASE CONFIGURATION
# ============================================
# If you want to use a database instead of JSON file

# MongoDB Connection String
# MONGODB_URI=mongodb://localhost:27017/kwote

# PostgreSQL Connection
# DATABASE_URL=postgresql://user:password@localhost:5432/kwote

# ============================================
# OPTIONAL: JWT CONFIGURATION
# ============================================
# For enhanced authentication

# JWT Secret Key (generate a random string)
# JWT_SECRET=your_super_secret_jwt_key_here

# JWT Expiration Time
# JWT_EXPIRES_IN=24h

# ============================================
# OPTIONAL: CORS CONFIGURATION
# ============================================

# Allowed origins for CORS
# CORS_ORIGIN=http://localhost:5174,http://localhost:3000

# ============================================
# OPTIONAL: RATE LIMITING
# ============================================

# Maximum requests per window
# RATE_LIMIT_MAX=100

# Time window in minutes
# RATE_LIMIT_WINDOW=15
